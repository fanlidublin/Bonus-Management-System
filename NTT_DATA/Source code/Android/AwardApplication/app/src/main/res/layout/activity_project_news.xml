<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_project_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="award.topic.com.awardapplication.ProjectNewsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="支出费用:"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:alpha="0.8"/>
            <TextView
                android:id="@+id/tv_awardPay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="支出费用:"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="报销费用:"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:alpha="0.8"/>
            <TextView
                android:id="@+id/tv_awardWiped"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="余额:"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="         余额:"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:alpha="0.8"/>
            <TextView
                android:id="@+id/tv_awardBalance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="支出费用:"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="         日期:"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:alpha="0.8"/>
            <TextView
                android:id="@+id/tv_awardTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="支出费用:"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
